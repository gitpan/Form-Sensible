[%- textarea_rows = ''-%]
[%- IF render_hints.rows -%][% textarea_rows = 'rows="' _ render_hints.rows _ '"' -%][% END -%]
[%- textarea_cols = ''-%]
[%- IF render_hints.cols -%][% textarea_cols = 'cols="' _ render_hints.cols _ '"' -%][% END %]
<div id="[% css_prefix _ field_name %]_div" class="[% css_prefix -%]formfieldline [% css_prefix _ field_type %] [% css_prefix _ field_name %]">
    <span class="[% css_prefix -%]label [% css_prefix _ field_type %]_label">[% field.display_name %]</span>
    <textarea type="text" id="[% css_prefix _ form.name %]_[% field_name %]_input" class="[% css_prefix %]input [% css_prefix _ field_type %]_input [% css_prefix _ field_name %]_input" name="[% field_name %]" [% textarea_rows %] [% textarea_cols %]>[% field.value %]</textarea>
</div>